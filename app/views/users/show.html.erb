<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Zip:</b>
  <%= @user.zip %>
</p>

<table border=1>
  <tr>
    <th>Note</th>
    <th>Restaurant</th>
    <th>Dish</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user.visits.each do |visit| %>
  <tr>
    <td><%= visit.note %></td>
    <td><%= visit.restaurant.name %></td>
    <td><%= visit.dish.name %></td>
    <td><%= visit.rating %></td>
    <td><%= link_to 'Show', visit %></td>
    <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
    <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

